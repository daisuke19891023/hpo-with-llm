{
    "permissions": {
        "allow": [
            "WebFetch(domain:github.com)",
            "Bash(mkdir:*)",
            "Bash(nox:*)",
            "Bash(uv:*)",
            "Bash(uv sync:*)",
            "Bash(uv venv:*)",
            "Bash(uv run:*)",
            "Bash(python:*)",
            "Bash(pytest:*)",
            "Bash(ruff:*)",
            "Bash(pyright:*)",
            "Bash(source:*)",
            "Bash(deactivate)",
            "Bash(grep:*)",
            "Bash(ls:*)",
            "Bash(rm:*)",
            "Bash(cp:*)",
            "Bash(chmod:*)",
            "Bash(touch:*)",
            "Bash(find:*)",
            "Bash(npm install)",
            "Bash(npm run:*)",
            "Bash(git add:*)",
            "Bash(git commit:*)",
            "Bash(git pull:*)",
            "Bash(git push:*)",
            "Bash(git update-index:*)",
            "Edit",
            "Write",
            "MultiEdit",
            "LS",
            "Grep",
            "Glob"
        ],
        "deny": [
            "Bash(git push --force:*)",
            "Bash(git push -f:*)",
            "Bash(rm -rf:*)",
            "Bash(rm -r -f:*)",
            "Bash(rm -f -r:*)",
            "Bash(sudo rm:*)"
        ]
    },
    "env": {
        "BASH_MAX_TIMEOUT_MS": 3600000,
        "DISABLE_TELEMETRY":1,
        "MAX_THINKING_TOKENS": "31999"


    },
    "hooks": {
        "PostToolUse": [
            {
                "matcher": "Write|Edit|MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python_quality_check.sh"
                    }
                ]
            }
        ],
        "Stop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python_quality_check.sh"
                    }
                ]
            }
        ],
        "SubagentStop": [
            {
                "hooks": [
                    {
                        "type": "command",
                        "command": "$CLAUDE_PROJECT_DIR/.claude/hooks/python_final_quality_check.sh"
                    }
                ]
            }
        ]
    }
}
